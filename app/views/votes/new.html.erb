<!-- Validation failure messages -->
<% if @vote.errors.any? %>
  <% @vote.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Vote</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_vote" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for voter_id -->
      <input type="hidden" name="voter_id" value="<%= current_user.id %>">

      <!-- Label and input for vote_descrption -->
      <div class="form-group">
        <label for="vote_descrption" class="control-label">
          Vote descrption
        </label>

        <input type="text" id="vote_descrption" name="vote_descrption" placeholder="Vote descrption" class="form-control" value="<%= @vote.vote_descrption %>">
      </div>

      <button class="btn btn-success">
        Create Vote
      </button>
      or
      <a href="/votes">Cancel</a>
    </form>
  </div>
</div>
