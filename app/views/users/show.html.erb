<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A User has many photos -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Photos
      </li>

      <% @user.photos.each do |photo| %>
        <li class="list-group-item">
          <a href="/photos/<%= photo.id %>">
            <%= photo.caption %>
          </a>
          <a href="/photos/<%= photo.id %>" class="btn btn-primary">
            Show
          </a>
          <%if current_user == photo.user %>
            <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">
              Edit
            </a>
            <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">
              Delete
            </a>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A User has many comments -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Comments
      </li>

      <% @user.comments.each do |comment| %>
        <li class="list-group-item">
          <a href="/comments/<%= comment.id %>">
            <%= comment.comment_description %>
          </a>
          <a href="/comments/<%= comment.id %>" class="btn btn-primary">
            Show
          </a>
          <%if current_user == comment.commenter %>
            <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">
              Edit
            </a>
            <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">
              Delete
            </a>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A User has many votes -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Votes
      </li>

      <% @user.votes.each do |vote| %>
        <li class="list-group-item">
          <a href="/votes/<%= vote.id %>">
            <%= vote.vote_descrption %>
          </a>
          <a href="/votes/<%= vote.id %>" class="btn btn-primary">
            Show
          </a>
          <%if current_user == vote.user %>
            <a href="/votes/<%= vote.id %>/edit" class="btn btn-warning">
              Edit
            </a>
            <a href="/delete_vote/<%= vote.id %>" class="btn btn-danger" rel="nofollow">
              Delete
            </a>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
